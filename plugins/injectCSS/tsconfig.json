{
  "extends": "tsconfig-vuepress/base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "target": "ES2022",
    "composite": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "types": ["vuepress/client-types", "vite/client", "webpack-env"]
  },
  "include": ["./src"]
} 